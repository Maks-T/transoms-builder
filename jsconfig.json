{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@composables/*": ["./src/composables/*"],
      "@src/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@stores/*": ["./src/stores/*"],
      "@services/*": ["./src/services/*"],
      "@utils/*": ["./src/utils/*"]
    },
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "*.js",
    "*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}